  "compilerOptions": {
    "target": "es2017" ,
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true ,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "src/"
  ],
  "exclude": ["node_modules", "build", "tests"]
}